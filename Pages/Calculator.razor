@page "/calculator"

<h3>Calcolatrice</h3>

<input @bind="Operand1" type="number" placeholder="Primo numero" />
<select @bind="Operator">
    <option value="+">+</option>
    <option value="-">-</option>
    <option value="*">*</option>
    <option value="/">/</option>
</select>
<input @bind="Operand2" type="number" placeholder="Secondo numero" />

<button @onclick="Calculate">Calcola</button>

<div>
    Risultato: @Result
</div>

@code {
    private double Operand1 { get; set; }
    private double Operand2 { get; set; }
    private string Operator { get; set; } = "+";
    private double Result { get; set; }

    private void Calculate()
    {
        Result = Operator switch
        {
            "+" => Operand1 + Operand2,
            "-" => Operand1 - Operand2,
            "*" => Operand1 * Operand2,
            "/" => Operand2 != 0 ? Operand1 / Operand2 : double.NaN,
            _ => 0
        };
    }
}
